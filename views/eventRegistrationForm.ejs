              <div class="app-form-group">
                <input class="app-form-control" placeholder="EMAIL" type="email"  name="email" id="gmail">
              </div>
              <div class="app-form-group">
                <input class="app-form-control" placeholder="CONTACT NO"type="text" name="contactNumber" id="number">
              </div>
              <div class="app-form-group message">
                <input class="app-form-control" placeholder="EVENTNAME"type="text" name="eventname" id="eventname">
              </div>
              <div class="app-form-group buttons">
                <!-- <button class="app-form-button">CANCEL</button> -->
                <button class="app-form-button" name="button" value="formSubmit" onclick='sendMail()'>Register</button>
              </div>
            </div>
        </form>
          </div>
        </div>
      </div>
  
