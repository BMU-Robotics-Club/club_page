  </script>


</head>
<body>

<div class="background">
    <div class="container">
      <div class="screen">
        <div class="screen-header">
         
        </div>
        <div class="screen-body">
          <div class="screen-body-item left">
            <div class="app-title">

               
              <span>REGISTRATION FORM</span>
            </div>
          </div>

          <form action="/events/form/success" method="post">
            
          <div class="screen-body-item">
